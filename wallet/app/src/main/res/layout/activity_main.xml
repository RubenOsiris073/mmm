<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header moderno con diseÃ±o similar al repo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_header_bg"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="50dp"
            android:paddingEnd="24dp"
            android:paddingBottom="40dp">

            <!-- Header content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back"
                        android:textColor="#E3F2FD"
                        android:textSize="16sp"
                        android:alpha="0.9"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Wallet"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/profile_avatar_bg"
                    android:src="@drawable/ic_account_circle_modern"
                    android:padding="12dp"
                    android:tint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Balance Card principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/balance_card_bg"
            android:padding="28dp"
            android:elevation="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Balance"
                android:textColor="#8E8E93"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textColor="#1D1D1F"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/balanceAmountText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1,250.00"
                    android:textColor="#1D1D1F"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MXN"
                    android:textColor="#8E8E93"
                    android:textSize="14sp"
                    android:background="@drawable/currency_small_badge_bg"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Quick action buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addFundsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Add Funds"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:backgroundTint="#007AFF"
                    app:cornerRadius="12dp"
                    app:rippleColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Features Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Sync with POS Feature -->
            <LinearLayout
                android:id="@+id/syncCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/feature_icon_bg"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sync_modern"
                        android:tint="#007AFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sync with POS"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connect your wallet with the point of sale system"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#C7C7CC"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Transaction History Feature -->
            <LinearLayout
                android:id="@+id/transactionHistoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/feature_icon_bg"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_history_modern"
                        android:tint="#007AFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction History"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View your payment history and transactions"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#C7C7CC"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Settings Feature -->
            <LinearLayout
                android:id="@+id/settingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feature_card_bg"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/feature_icon_bg"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings_modern"
                        android:tint="#007AFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="#1D1D1F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage your wallet preferences and security"
                        android:textColor="#8E8E93"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#C7C7CC"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- Info Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/info_banner_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info_modern"
                android:tint="#007AFF"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Make sure you're connected to the same WiFi network as the POS system for seamless syncing."
                android:textColor="#007AFF"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>

</ScrollView>